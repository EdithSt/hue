print("Good Morning, this is a program to convert kilometres into miles.")

amount_km = float(input("Please enter the km you want to converge into miles: "))
amount_miles = amount_km * 0.621371
print(amount_km, "km are", amount_miles, "miles")

answer = input("Do you want to do another round? y or n")

while answer.lower == "y":

    amount_km = float(input("Please enter the km you want to converge into miles: "))
    amount_miles = amount_km * 0.621371
    print(amount_km, "km are", amount_miles, "miles")
    answer = input("Do you want to do another round? y or n")
