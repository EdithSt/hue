num_1 = float(input("Enter a numerical value: "))
num_2 = float(input("Enter another numerical value: "))
operation = input("Enter a numerical operator, like + - * or /    ")

if operation == "+":
    print (num_1 + num_2)
elif operation == "-":
    print (num_1 - num_2)
elif operation == "*":
    print(num_1 * num_2)
elif operation == "/":
    print(num_1 / num_2)
else:
    print ("Don't be stupid")
